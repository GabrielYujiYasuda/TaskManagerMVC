@model TaskModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Task</h2>
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" type="text" class="form-control" disabled />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Description" class="p-0"></label>
			<input asp-for="Description" type="text" class="form-control" disabled />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>

			<div class="col-6 col-md-3">
				<a asp-controller="Task" asp-action="Index" class="btn btn-outline-secondary form-control border">Back to List</a>
			</div>
		</div>
	</div>
</form>